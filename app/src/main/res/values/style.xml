<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" >
        <item name="tint">@color/white_1</item>
    </style>

     <style name="color_text">
         <item name="android:textColor">@color/white_dark</item>
     </style>

     <style name="edit">
         <item name="android:textColorHint">@color/white_dark</item>
         <item name="android:textSize">@dimen/text_14</item>
     </style>

     <style name="color_text.text_note">
         <item name="android:textSize">@dimen/text_12</item>
     </style>

    <style name="color_text.text_note_time">
        <item name="android:textSize">@dimen/text_10</item>
    </style>

     <style name="edit_search" parent="edit">
            <item name="drawableTint">@color/white_dark</item>
            <item name="android:layout_marginTop">@dimen/margin_8</item>
            <item name="android:drawableStart">@drawable/ic_baseline_search_24</item>
            <item name="android:background">@drawable/search</item>
            <item name="android:paddingHorizontal">@dimen/margin_16</item>
            <item name="android:textColorHint">@color/white_dark</item>
            <item name="android:textSize">@dimen/text_14</item>
            <item name="android:layout_marginHorizontal">@dimen/margin_8</item>
     </style>

     <style name="card_task">
           <item name="cardCornerRadius">@dimen/margin_16</item>
           <item name="android:layout_marginHorizontal">@dimen/margin_8</item>
           <item name="android:layout_marginVertical">@dimen/margin_6</item>
           <item name="android:background">@color/theme_primary_dark</item>
     </style>

     <style name="float_background">
           <item name="tint">@color/white_tint</item>
           <item name="android:layout_marginEnd">@dimen/margin_16</item>
           <item name="android:layout_marginBottom">@dimen/margin_32</item>
     </style>


    <style name="text">
          <item name="android:textSize">@dimen/text_16</item>
          <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text.task">
         <item name="android:layout_marginVertical">@dimen/margin_28</item>
         <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
         <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.message">
         <item name="android:textColor">@color/white_dark</item>
    </style>

    <style name="image_not_found">
        <item name="android:tint">@color/white_dark</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="layout_constraintDimensionRatio">6:4</item>
        <item name="srcCompat">@drawable/ic_baseline_sticky_note_2_24</item>
    </style>

    <style name="text_title_page">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text_category">
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:layout_margin">@dimen/margin_20</item>
    </style>

    <style name="text_category.title">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="text_category.number">
        <item name="android:textSize">@dimen/text_10</item>
    </style>

    <style name="button_dialog_folder_create">
         <item name="layout_constraintDimensionRatio">3:1</item>
         <item name="android:textAllCaps">false</item>
         <item name="android:background">@drawable/button_dialog_create_folder</item>
    </style>

</resources>